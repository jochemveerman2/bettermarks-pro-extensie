{
    "manifest_version": 3,
    "name": "Bettermarks Pro",
    "version": "1.0.0",
    "description": "Bettermarks Pro extentie. Deze verwijderd onder anderen uitroeptekens en meer.",
    "content_scripts": [
        {
            "matches": ["*://*.bettermarks.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": ["scripting"],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}